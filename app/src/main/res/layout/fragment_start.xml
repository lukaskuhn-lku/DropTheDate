<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/background"
        android:id="@+id/imageView"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/black"
            android:id="@+id/imageView4"
            android:alpha="0.45" />

        <RelativeLayout
            android:id="@+id/activity_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="de.rocketfox.dropthedate.StartActivity">

            <Button
                android:text="Info"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/btnInfo"
                android:background="@drawable/layout_bg"
                android:drawableLeft="@drawable/info"
                android:padding="10dp"
                android:elevation="0dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_width="120dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@drawable/play"
                android:id="@+id/imgReplayButton"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:text="Clear DB"
                android:layout_height="wrap_content"
                android:id="@+id/btnSettings"
                android:background="@drawable/layout_bg"
                android:drawableLeft="@drawable/database"
                android:padding="10dp"
                android:elevation="0dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="120dp" />

            <Button
                android:text="Get more awesome packs!"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnShop"
                android:background="@drawable/layout_bg"
                android:padding="15dp"
                android:textColor="@android:color/background_light"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/imgReplayButton"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@drawable/dropthedate_logo"
                android:id="@+id/imgHeaderLogo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
