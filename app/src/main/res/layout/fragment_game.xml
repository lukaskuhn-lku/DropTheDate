<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    tools:context="de.rocketfox.dropthedate.GameFragment"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/darker_gray"
                    android:id="@+id/imgTopEvent"
                    android:scaleType="centerCrop"
                    android:cropToPadding="false"
                    android:adjustViewBounds="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:color/darker_gray"
                    android:id="@+id/imgBottomEvent"
                    android:scaleType="centerCrop"
                    android:cropToPadding="false"
                    android:adjustViewBounds="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/black"
            android:id="@+id/imageView3"
            android:alpha="0.67" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rlTop">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/txtEventTop"
                        android:textSize="30sp"
                        android:textColor="@android:color/background_light"
                        android:textAlignment="center"
                        android:alpha="0.8"
                        android:padding="2dp" />

                    <TextView
                        android:text="Highscore:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtHighScore"
                        android:layout_marginRight="38dp"
                        android:layout_marginEnd="38dp"
                        android:textColor="@android:color/background_light"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="18sp"
                        android:layout_marginTop="22dp" />

                    <TextView
                        android:id="@+id/txtDateTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtEventTop"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="46dp"
                        android:text="TextView"
                        android:textColor="@color/date"
                        android:textSize="25sp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rlBottom">

                    <TextView
                        android:id="@+id/txtDateBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtEventBottom"
                        android:layout_centerHorizontal="true"
                        android:text="TextView"
                        android:textColor="@color/date"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/txtEventBottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:alpha="0.8"
                        android:padding="2dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnBack"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/leftarrow"
                android:elevation="6dp"
                android:text="Back"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgCenter"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:alpha="1"
                app:srcCompat="@drawable/middle" />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imgDecider"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignLeft="@+id/imgCenter"
                android:layout_alignStart="@+id/imgCenter"
                android:layout_alignTop="@+id/imgCenter"
                android:alpha="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/checked" />

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
